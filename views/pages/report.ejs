</head>

<body>
		<nav>
		<div class="nav-wrapper #f57c00 orange darken-1">
			<a href="#" class="brand-logo nav-text">gHoodies</a>
			<ul id="nav-mobile" class="right">
				<li><a href="#!" id="load-requests" class="nav-text">Submit Requests</a></li>
				<li><a href="#!" id="load-results" class="nav-text">View Requests</a></li>
			</ul>
		</div>
	</nav>

    <main>
        <div class="" id="content">
          <h4>View Hoodie Requests</h4>

          <div class="row">
              <form id="cohort-dropdown" action="" class="col s4">
                <div class="row">
                  <div class="input-field col s12">
                    <select id="select-cohort">
                        <option value="" selected disabled>Choose your cohort</option>
                        <option value="g42"> g42 </option>
                        <option value="g35"> g35 </option>
                    </select>
                    <!-- <label>Select a cohort</label> -->
                  </div>
                </div>
                <div class="center">
                  <!-- <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                  </button> -->
                </div>
              </form>
            </div>
            <div class="table">
              <table>
                <thead>
                  <tr>
                    <td>Student Name</td>
                    <td>Size</td>
                  </tr>
                </thead>
                <tbody>
                  <% data.forEach((students) => { %>
                    <tr>
                      <td><%= students.name %></td>
                      <td><%= students.size %></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
        </div>
    </main>
